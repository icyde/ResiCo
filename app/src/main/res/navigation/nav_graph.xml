<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.resico.ui.home.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_forums"
            app:destination="@id/nav_forums"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popUpTo="@id/nav_forums"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_nav_home_to_nav_events"
            app:destination="@id/nav_events"
            app:enterAnim="@anim/slide_in_right"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/slide_in_right"
            app:popUpTo="@id/nav_events"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_forums"
        android:name="com.example.resico.ui.forum.ForumsFragment"
        android:label="@string/title_activity_forum"
        tools:layout="@layout/fragment_forums" />

    <fragment
        android:id="@+id/nav_events"
        android:name="com.example.resico.ui.event.EventsFragment"
        android:label="@string/events_fragment_label"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/nav_announcements"
        android:name="com.example.resico.ui.announcements.AnnouncementsFragment"
        android:label="@string/announcements_fragment_label"
        tools:layout="@layout/fragment_announcements">
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.resico.ui.profile.ProfileFragment"
        android:label="@string/profile_fragment_label"
        tools:layout="@layout/fragment_profile" />

</navigation>
